{
  "npmScope": "simplisafe-oss",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "build-base"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "e2e": {
      "dependsOn": ["^build"]
    },
    "publish": {
      "dependsOn": ["build"]
    }
  },
  "workspaceLayout": {
    "appsDir": "examples",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build-base", "build", "lint", "test", "e2e"]
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "generators": {
    "@simplisafe-oss/nx-gatsby": {
      "application": {
        "style": "css"
      }
    },
    "@nx/react": {
      "application": {
        "babel": true
      }
    }
  },
  "defaultProject": "gatsby-example"
}
